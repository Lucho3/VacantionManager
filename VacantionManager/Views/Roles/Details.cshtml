@model VacantionManager.Models.Entity.RoleModel

@{
    ViewData["Title"] = "DetailsCEO";
    Layout = "~/Views/Shared/_LayoutLogged.cshtml";
}

<div>
    <h4>Role Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Role name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.id">Edit role</a>
</div>
<p style="font-weight:bold;">Users with this role:</p>
@if (Model.users.Count() != 0)
{

    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Username:
                    </th>
                    <th>
                        First name:
                    </th>
                    <th>
                        Last name:
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.users)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.firstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.lastName)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.id" asp-controller="Users">Details</a> |
                            <a asp-action="Edit" asp-route-id="@item.id" asp-controller="Users">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No users with this role!</p>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>