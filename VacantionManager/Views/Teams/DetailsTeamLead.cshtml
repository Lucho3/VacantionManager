@model VacantionManager.Models.ViewModels.TeamDetailsViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutLogged.cshtml";
}

<script>
function openUsers(evt, tabName) {
  var i, tabcontent, tablinks;
  tabcontent = document.getElementsByClassName("tabcontent");
  for (i = 0; i < tabcontent.length; i++) {
    tabcontent[i].style.display = "none";
  }
  tablinks = document.getElementsByClassName("tablinks");
  for (i = 0; i < tablinks.length; i++) {
    tablinks[i].className = tablinks[i].className.replace(" active", "");
  }
    document.getElementById(tabName).style.display = "block";
  evt.currentTarget.className += " active";
}
</script>

<style>

    /* Style the tab */
    .tab {
        overflow: hidden;
        border: 1px solid #ccc;
        background-color: #f1f1f1;
    }

        /* Style the buttons inside the tab */
        .tab button {
            background-color: inherit;
            float: left;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 14px 16px;
            transition: 0.3s;
            font-size: 17px;
        }

            /* Change background color of buttons on hover */
            .tab button:hover {
                background-color: #ddd;
            }

            /* Create an active/current tablink class */
            .tab button.active {
                background-color: #ccc;
            }

    /* Style the tab content */
    .tabcontent {
        display: none;
        padding: 6px 12px;
        border: 1px solid #ccc;
        border-top: none;
    }
</style>

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Team name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.team.name)
        </dd>

        <dt class="col-sm-2">
            Team leader:
        </dt>

        @if (Model.team.teamLeader == null)
        {
            <dd class="col-sm-10">
                No team leader!
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                @(Model.team.teamLeader.firstName + " " + Model.team.teamLeader.lastName)
            </dd>
        }


        <dt class="col-sm-2">
            Project:
        </dt>
        @if (Model.team.project == null)
        {
            <dd class="col-sm-10">
                No project currently working on!
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                @Model.team.project.name
            </dd>

        }
    </dl>
    <p>@ViewData["Message"]</p>
    <div class="tab">
        <button class="tablinks" onclick="openUsers(event, 'UsersInTeam')">Users in team without the leader</button>
        <button class="tablinks" onclick="openUsers(event, 'AddUsersInTeam')">Add users in team</button>
    </div>

    <div id="UsersInTeam" class="tabcontent">
        @if (Model.team.devs.Count() > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Usrname:
                        </th>
                        <th>
                            First name:
                        </th>
                        <th>
                            Last name:
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.team.devs)
                    {
                        <tr>
                            <td>
                                @item.username
                            </td>
                            <td>
                                @item.firstName
                            </td>
                            <td>
                                @item.lastName
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.id" asp-controller="Users">Details</a> |
                                <a asp-action="RemoveFromTeam" asp-controller="Teams" asp-route-teamId="@Model.team.id" asp-route-userId="@item.id">Remove from team</a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No users in this team!</p>
        }
    </div>

    <div id="AddUsersInTeam" class="tabcontent">
        @if (Model.users.Count() > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Usrname:
                        </th>
                        <th>
                            First name:
                        </th>
                        <th>
                            Last name:
                        </th>
                        <th>
                            Role:
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.users)
                    {
                    <tr>
                        <td>
                            @item.username
                        </td>
                        <td>
                            @item.firstName
                        </td>
                        <td>
                            @item.lastName
                        </td>
                        <td>
                            @item.role.name
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.id" asp-controller="Users">Details</a> |
                            <a asp-action="AddInTeam" asp-route-teamId="@Model.team.id" asp-route-userId="@item.id">Add user in team</a>
                        </td>
                    </tr>

                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No free users to add</p>
        }
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
