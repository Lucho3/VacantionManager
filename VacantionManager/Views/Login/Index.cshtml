@model VacantionManager.Models.Entity.UserModel

@{
    ViewData["Title"] = "Log In";
}

<script>
    function showPass(input) {
        var x = document.getElementById(input);
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>

<h1>Log In</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="username" class="control-label"></label>
                <input name="username" class="form-control" />
                <span asp-validation-for="username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label"></label>
                <input id="passwordTb"  minlength="8" name="password" type="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
                <div><input type="checkbox" onclick=showPass("passwordTb")>Show Password</div>
            </div>
            <div>
                <p class="text-danger">@ViewData["Error message"]</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Log In" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Registration">Register</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
